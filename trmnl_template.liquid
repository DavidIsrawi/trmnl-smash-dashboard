<style>
    :root {
        --bg-color: #ffffff;
        --text-color: #000000;
        --border-color: #000000;
        --gray-100: #f3f3f3;
        --gray-200: #e5e5e5;
        --gray-800: #1a1a1a;
    }

    .smash-dashboard {
        width: 780px;
        height: 460px;
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        overflow: hidden;
        display: grid;
        grid-template-columns: 310px 1fr;
        grid-template-rows: 1fr;
        gap: 10px;
        padding: 10px 13px 13px 10px;
        filter: grayscale(100%);
        box-sizing: border-box;
        position: relative;
        -webkit-font-smoothing: antialiased;
    }

    .smash-dashboard *, .smash-dashboard *::before, .smash-dashboard *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    /* --- UTILS --- */
    .smash-dashboard .card {
        border: 3px solid var(--border-color);
        border-radius: 20px;
        padding: 16px;
        position: relative;
        display: flex;
        flex-direction: column;
        background: white;
        box-shadow: 3px 3px 0px rgba(0,0,0,1);
    }

    .smash-dashboard .smash-label {
        font-size: 14px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .smash-dashboard .label-icon {
        display: inline-block;
        width: 10px;
        height: 10px;
        background: black;
        border-radius: 2px;
    }

    /* --- LEFT COLUMN --- */
    .smash-dashboard .left-col {
        display: grid;
        grid-template-rows: 1fr 1fr;
        gap: 10px;
    }

    .smash-dashboard .top-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    /* Season Stats (Top-Left) */
    .smash-dashboard .stats-card {
        background-color: var(--gray-100);
        justify-content: space-between;
    }

    .smash-dashboard .win-rate {
        font-size: 40px;
        font-weight: 900;
        line-height: 0.9;
        margin-top: 4px;
    }

    .smash-dashboard .record {
        font-size: 16px;
        font-weight: 700;
        opacity: 0.8;
        margin-bottom: 12px;
    }

    .smash-dashboard .char-stats {
        display: flex;
        flex-direction: column;
        gap: 6px;
        border-top: 2px solid #ddd;
        padding-top: 10px;
    }

    .smash-dashboard .char-row {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
        font-weight: 700;
    }

    /* Next Up (Top-Right) */
    .smash-dashboard .next-card {
        justify-content: space-between;
        background-color: white;
        overflow: hidden;
        padding: 14px;
    }

    .smash-dashboard .next-logo-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        align-self: center;
        top: 0;
        bottom: 0;
    }

    .smash-dashboard .next-logo {
        width: 100px;
        height: 100px;
        object-fit: contain;
        filter: grayscale(100%) contrast(1.2);
        border-radius: 50%;
        border: 2px solid #eee;
        padding: 2px;
        opacity: 0.15;
        margin: auto;
    }

    .smash-dashboard .next-info {
        text-align: center;
    }

    .smash-dashboard .days-remaining {
        font-size: 32px;
        font-weight: 900;
        line-height: 1;
    }

    .smash-dashboard .days-label {
        font-size: 12px;
        font-weight: 800;
        text-transform: uppercase;
        color: #666;
    }

    .smash-dashboard .next-badge {
        background: black;
        color: white;
        padding: 6px 10px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 800;
        text-align: center;
        margin-top: 8px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Previous History (Bottom-Left) */
    .smash-dashboard .history-card {
        display: flex;
        flex-direction: row;
        align-items: center;
        padding: 0;
        overflow: hidden;
    }

    .smash-dashboard .history-rank {
        background: black;
        color: white;
        width: 100px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-right: 3px solid black;
        flex-shrink: 0;
    }

    .smash-dashboard .rank-label {
        font-size: 12px;
        font-weight: 800;
        margin-bottom: 0px;
        opacity: 0.8;
    }

    .smash-dashboard .rank-num {
        font-size: 48px;
        font-weight: 900;
        line-height: 0.9;
    }

    .smash-dashboard .history-details {
        padding: 14px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex: 1;
        min-width: 0;
    }

    .smash-dashboard .history-label {
        font-size: 12px;
        font-weight: 800;
        text-transform: uppercase;
        color: #888;
        margin-bottom: 6px;
    }

    .smash-dashboard .history-title {
        font-size: 22px;
        font-weight: 900;
        margin-bottom: 4px;
        overflow: hidden;
        line-height: 1.1;
    }

    .smash-dashboard .history-meta {
        font-size: 15px;
        color: #555;
        font-weight: 600;
    }

    .smash-dashboard .history-char {
        margin-top: 6px;
        font-size: 14px;
        font-weight: 800;
        color: black;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .smash-dashboard .history-uf {
        display: inline-flex;
        align-items: center;
        font-size: 13px;
        font-weight: 800;
        background: #f0f0f0;
        padding: 4px 8px;
        border-radius: 8px;
        border: 3px solid #000;
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 2;
    }

    .smash-dashboard .history-record {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: #f0f0f0;
        padding: 4px 8px;
        border-radius: 8px;
        border: 3px solid #000;
        font-weight: 800;
        font-size: 12px;
        position: absolute;
        bottom: 10px;
        right: 10px;
        z-index: 2;
    }

    /* --- RIGHT COLUMN (HERO) --- */
    .smash-dashboard .hero-card {
        padding: 0;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        background: #fff;
        position: relative;
    }

    .smash-dashboard .hero-header {
        padding: 20px;
        z-index: 2;
        position: relative;
        flex: 1;
    }

    .smash-dashboard .hero-label {
        background: black;
        color: white;
        display: inline-block;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 800;
        text-transform: uppercase;
        margin-bottom: 12px;
    }

    .smash-dashboard .hero-rank-large {
        font-size: 130px;
        font-weight: 900;
        line-height: 0.8;
        letter-spacing: -6px;
        margin-left: -6px;
        position: relative;
        z-index: 2;
    }

    .smash-dashboard .mini-stat {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: #f0f0f0;
        padding: 6px 10px;
        border-radius: 8px;
        border: 3px solid #000;
        z-index: 3;
        position: absolute;
        font-weight: 800;
        font-size: 14px;
    }

    .smash-dashboard .hero-trend-inline {
        display: inline-flex;
        align-items: center;
        font-size: 22px;
        font-weight: 800;
        background: #f0f0f0;
        padding: 5px 10px;
        border-radius: 8px;
        border: 3px solid #000;
        position: relative;
        z-index: 2;
        margin-top: 8px;
    }

    .smash-dashboard .trend-up {
        width: 0;
        height: 0;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-bottom: 12px solid black;
        margin-right: 6px;
    }

    .smash-dashboard .trend-down {
        width: 0;
        height: 0;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-top: 12px solid black;
        margin-right: 6px;
    }

    .smash-dashboard .trend-neutral {
        width: 16px;
        height: 4px;
        background: black;
        border-radius: 2px;
        margin-right: 6px;
    }

    /* Corner Stats */
    .smash-dashboard .stat-entrants {
        top: 16px;
        right: 16px;
    }

    .smash-dashboard .stat-record {
        bottom: 16px;
        right: 16px;
    }

    .smash-dashboard .hero-image-container {
        position: absolute;
        bottom: 0;
        right: -30px;
        width: 380px;
        height: 380px;
        opacity: 0.15;
        z-index: 1;
        filter: grayscale(100%) contrast(140%);
        pointer-events: none;
    }

    .smash-dashboard .hero-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .smash-dashboard .hero-footer {
        background: black;
        color: white;
        padding: 16px 20px;
        z-index: 4;
        position: relative;
    }

    .smash-dashboard .tourney-name {
        font-size: 32px;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -1px;
        margin-bottom: 4px;
        line-height: 1;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .smash-dashboard .tourney-meta {
        font-size: 16px;
        color: #ccc;
        font-weight: 600;
        display: flex;
        justify-content: space-between;
    }

    .smash-dashboard .texture-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: radial-gradient(#000 1.5px, transparent 0);
        background-size: 5px 5px;
        opacity: 0.05;
        pointer-events: none;
        z-index: 10;
    }
</style>

<div class="smash-dashboard">
    <div class="texture-overlay"></div>

    <!-- Left Column -->
    <div class="left-col">
        <!-- Top Row -->
        <div class="top-row">
            <!-- Season Stats -->
            <div class="card stats-card">
                <div>
                    <div class="smash-label"><span class="label-icon"></span>Season</div>
                    <div class="win-rate">{{ season.win_rate }}%</div>
                    <div class="record">{{ season.wins }}W - {{ season.losses }}L</div>
                </div>

                <div class="char-stats">
                    {% for char in season.top_chars %}
                    <div class="char-row">
                        <span>{{ char.name | upcase }}</span>
                        <span>{{ char.usage_count }} Games</span>
                    </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Next Up -->
            <div class="card next-card">
                <div class="smash-label" style="margin-bottom: 0;"><span class="label-icon"></span>Next</div>

                {% if next_tournament %}
                <div class="next-logo-wrapper">
                    {% if next_tournament.image_url %}
                    <img src="{{ next_tournament.image_url }}" alt="Logo" class="next-logo">
                    {% else %}
                    <div class="next-logo" style="display:flex;align-items:center;justify-content:center;font-size:24px;">?</div>
                    {% endif %}
                </div>

                <div class="next-info">
                    {% if next_tournament.days_remaining == 1 %}
                    <div class="days-remaining">{{ next_tournament.days_remaining }} DAY</div>
                    {% else %}
                    <div class="days-remaining">{{ next_tournament.days_remaining }} DAYS</div>
                    {% endif %}
                </div>
                <div class="next-badge">{{ next_tournament.name | truncate: 15 }}</div>
                {% else %}
                <div class="next-info" style="margin-top: 20px;">
                    <div class="days-remaining">--</div>
                    <div class="days-label">No Upcoming</div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Previous History -->
        <div class="card history-card">
            {% if previous_result %}
            {% if previous_result.upset_factor != null %}
            <span class="history-uf">
                {% if previous_result.upset_factor > 0 %}
                <span class="trend-up"></span>
                {% elsif previous_result.upset_factor == 0 %}
                <span class="trend-neutral"></span>
                {% else %}
                <span class="trend-down"></span>
                {% endif %}
                {{ previous_result.upset_factor }}
            </span>
            {% endif %}
            <span class="history-record">
                {{ previous_result.wins }}W - {{ previous_result.losses }}L
            </span>
            <div class="history-rank">
                <span class="rank-label">PLACED</span>
                <span class="rank-num">{{ previous_result.rank }}</span>
            </div>
            <div class="history-details">
                <div class="history-label">Previous Result</div>
                <div class="history-title">{{ previous_result.event_name }}</div>
                <div class="history-meta">{{ previous_result.date }} &bull; {{ previous_result.entrants }} Entrants</div>
                <div class="history-char">
                    <span>Played: {{ previous_result.char_played }}</span>
                </div>
            </div>
            {% else %}
            <div class="history-details">
                <div class="history-title">No History</div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Right Column (Hero) -->
    <div class="card hero-card">
        {% if latest_result %}
        <div class="hero-header">
            <div class="hero-label">Latest Result</div>

            <!-- Entrants (Top Right Corner) -->
            <div class="mini-stat stat-entrants">
                {{ latest_result.entrants }} Entrants
            </div>

            <!-- Record (Bottom Right of Header Area) -->
            <div class="mini-stat stat-record">
                {{ latest_result.wins }}W - {{ latest_result.losses }}L
            </div>

            <!-- Rank & Upset Factor -->
            <div style="margin-top: 10px;">
                <span class="hero-rank-large">#{{ latest_result.rank }}</span>
            </div>
            {% if latest_result.upset_factor != null %}
            <div>
                <span class="hero-trend-inline">
                    {% if latest_result.upset_factor > 0 %}
                    <span class="trend-up"></span>
                    {% elsif latest_result.upset_factor == 0 %}
                    <span class="trend-neutral"></span>
                    {% else %}
                    <span class="trend-down"></span>
                    {% endif %}
                    {{ latest_result.upset_factor }}
                </span>
            </div>
            {% endif %}
        </div>

        <div class="hero-image-container">
            {% if latest_result.char_image_url %}
            <img src="{{ latest_result.char_image_url }}" alt="Character" class="hero-image">
            {% endif %}
        </div>

        <div class="hero-footer">
            <div class="tourney-name">{{ latest_result.tournament_name }}</div>
            <div class="tourney-meta">
                <span>{{ latest_result.date }}</span>
                <span>{{ latest_result.location }}</span>
            </div>
        </div>
        {% else %}
        <div class="hero-header">
            <div class="hero-label">Latest Result</div>
            <div style="margin-top: 20px;">
                <span class="hero-rank-large">--</span>
            </div>
        </div>
        <div class="hero-footer">
            <div class="tourney-name">No Results</div>
        </div>
        {% endif %}
    </div>
</div>
